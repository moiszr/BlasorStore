@page "/cuidado_personal"

<PageTitle>Cuidado Personal y Belleza - BlazorStore</PageTitle>

  <div class="content-wrapper">
    <div class="content-header pt-4">
      <div class="container">
        <img class="d-block w-100 elevation-2 mb-5"
        src="https://i5.walmartimages.com/dfw/4ff9c6c9-be35/k2-_705466a3-8b9c-4f37-beda-e6ad8ba7ccb7.v1.jpg"
        alt="" style="height:360px; border-radius: 8px;">
        <h3 class="text-center">Cuidado Personal y Belleza</h3>
      </div>
    </div>
    <div class="content">
        <div class="container">
            @if (eproduct != null)
            {
                <div class="contenedor">
                @foreach (var product in eproduct)
                {
                    <div class="tarjeta">
                        <img src="@product.Product_image" alt="Imagen Producto">
                        <h4>@product.Product_name</h4>
                        <p>$@product.Sale_price</p>
                        <a href="/productdetail/@product.Id" class="btn btn-primary">Ver Producto</a>
                        <button @onclick="() => AddCard(product.Id)" class="btn btn-primary">+ Añadir</button>
                    </div>
                }
                </div>
            }
        </div>
    </div>
</div>

@code {
